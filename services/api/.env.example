# Database
DATABASE_URL="postgresql://user:password@localhost:5432/shimahome?sslmode=prefer"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
ACCESS_TTL="15m"
REFRESH_TTL_DAYS="30"

# Email Configuration
EMAIL_DEV_MODE="true"  # Set to "false" for production
EMAIL_FROM="noreply@shimahome.com"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"

# Email Verification
EMAIL_CODE_TTL_MIN="15"

# Security Configuration
MAX_LOGIN_ATTEMPTS="5"
LOCK_DURATION_MINUTES="15"

# Web Origin (for email links and CORS)
WEB_ORIGIN="https://your-site.vercel.app"
